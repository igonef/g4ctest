<h1>Editing product</h1>

<%= form_for @product, :as => :product,
  :url => admin_product_url(:id => @product),
  :html => {:multipart => true, :method => :put} do |f| %>
  <%= render :partial => 'form', :locals => {:f => f} %>
  <%= submit_tag 'Edit' %>
<% end %>

<%= link_to 'Show', admin_product_url(:id => @product) %> |
<%= link_to 'Back', admin_products_url %>
