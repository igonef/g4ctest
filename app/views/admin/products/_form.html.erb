<% f.object.errors.full_messages.each do |msg| %>
   <p><%= msg %></p>
<% end %>
<!--[form:product]-->
<p><label for="product_title">Title</label><br/>
<%= f.text_field 'title'  %></p>

<p><label for="product_description">Description</label><br/>
<%= f.text_area 'description'  %></p>

<% unless f.object.new_record? || f.object.errors.size > 0 || f.object.image_file_name.blank? %>
  <p>
    <%= image_tag(f.object.image.url(:middle), :alt => "") %>
  </p>
<% end %>
<p><label for="product_image">Image</label><br/>
<%= f.file_field 'image'  %></p>

<p><label for="product_price">Price</label><br/>
<%= f.text_field 'price'  %></p>

<p><label for="product_is_digital">Digital?</label><br/>
<%= f.check_box 'is_digital'  %></p>

<p><label for="product_is_subscription">Subscription?</label><br/>
<%= f.check_box 'is_subscription'  %></p>
